<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select note colour"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/PinkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/radio_button"
                android:maxWidth="48dp"
                android:tintMode="multiply"
                app:srcCompat="@drawable/baseline_circle_24"
                app:tint="@color/option_1" />

            <ImageButton
                android:id="@+id/BlueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/radio_button"
                android:maxWidth="48dp"
                android:tintMode="multiply"
                app:srcCompat="@drawable/baseline_circle_24"
                app:tint="@color/option_2" />

            <ImageButton
                android:id="@+id/GreenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/radio_button"
                android:maxWidth="48dp"
                android:tintMode="multiply"
                app:srcCompat="@drawable/baseline_circle_24"
                app:tint="@color/option_3" />

            <ImageButton
                android:id="@+id/TurquoiseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/radio_button"
                android:maxWidth="48dp"
                android:tintMode="multiply"
                app:srcCompat="@drawable/baseline_circle_24"
                app:tint="@color/option_4" />

            <ImageButton
                android:id="@+id/YellowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/radio_button"
                android:maxWidth="48dp"
                android:tintMode="multiply"
                app:srcCompat="@drawable/baseline_circle_24"
                app:tint="@color/option_5" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/baseline_keyboard_arrow_down_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>